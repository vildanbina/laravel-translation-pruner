{
    "name": "vildanbina/laravel-translation-pruner",
    "description": "Simple Laravel package to find and remove unused translations",
    "keywords": [
        "laravel",
        "translations",
        "i18n",
        "cleanup",
        "pruning",
        "optimization",
        "unused-code"
    ],
    "homepage": "https://github.com/vildanbina/laravel-translation-pruner",
    "license": "MIT",
    "authors": [
        {
            "name": "Vildan Bina",
            "email": "vildanbina@gmail.com",
            "homepage": "https://github.com/vildanbina",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^12.38.1",
        "illuminate/console": "^12.38.1",
        "illuminate/filesystem": "^12.38.1",
        "illuminate/support": "^12.38.1",
        "spatie/laravel-package-tools": "^1.16",
        "symfony/finder": "^6.0|^7.0",
        "symfony/lock": "^6.0|^7.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.1",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.8.2",
        "orchestra/testbench": "^10.6.0",
        "pestphp/pest": "^4.1.3",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "VildanBina\\TranslationPruner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VildanBina\\TranslationPruner\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "VildanBina\\TranslationPruner\\TranslationPrunerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
